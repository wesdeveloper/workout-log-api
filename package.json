{
  "name": "workout-log-api",
  "version": "1.0.0",
  "description": "Api that allow us to registry our workout logs.",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc",
    "start": "npm run build && node dist/bin/index.js",
    "start:dev": "ts-node-dev bin/index.ts",
    "test": "npm run test:unit && npm run docker:test",
    "test:unit": "jest",
    "test:functional": "jest --projects ./test --runInBand",
    "lint": "eslint --ext .ts .",
    "lint:fix": "eslint --fix",
    "prepare": "husky install",
    "docker:dev": "docker-compose up -d",
    "docker:dev:logs": "docker-compose logs -f workoutlogapi",
    "docker:test": "docker-compose -f docker-compose.test.yml up --abort-on-container-exit"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wesdeveloper/workout-log-api.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/wesdeveloper/workout-log-api/issues"
  },
  "homepage": "https://github.com/wesdeveloper/workout-log-api#readme",
  "devDependencies": {
    "@types/chance": "^1.1.1",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.20",
    "@types/knex": "^0.16.1",
    "@types/morgan": "^1.9.2",
    "@types/mysql": "^2.15.18",
    "@types/node": "^14.14.32",
    "@types/supertest": "^2.0.10",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "chance": "^1.1.7",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "husky": "^5.1.3",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "rimraf": "^3.0.2",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.3",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.95.4",
    "morgan": "^1.10.0",
    "mysql2": "^2.2.5",
    "winston": "^3.3.3"
  }
}
